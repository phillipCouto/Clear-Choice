<Window x:Class="Clear_Choice.Windows.GeneratedPasswordDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal Password" Height="171" Width="400" Icon="/Resources/logo2.ico">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Email:" FontSize="14" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Name="txtEmail" Grid.Row="0" Grid.Column="1" Margin="5" FontSize="14" IsReadOnly="True"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Password:" FontSize="14" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Name="txtPassword" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="14" IsReadOnly="True"/>
        <Button Content="Close" Name="cmdClose" Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Left" Padding="10,5,10,5" FontSize="14" Click="cmdClose_Click"/>
    </Grid>
</Window>

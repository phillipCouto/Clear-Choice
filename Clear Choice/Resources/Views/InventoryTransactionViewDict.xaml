<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard BeginTime="0" x:Key="ItemFormShrink">
        <DoubleAnimation Storyboard.TargetName="grpItemInfo" Storyboard.TargetProperty="Height"  From="185.0" To="0.0" Duration="0:0:0.1"/>
    </Storyboard>
    <Storyboard BeginTime="0" x:Key="ItemFormExpand">
        <DoubleAnimation Storyboard.TargetName="grpItemInfo" Storyboard.TargetProperty="Height"  From="0.0" To="185.0" Duration="0:0:0.1"/>
    </Storyboard>
</ResourceDictionary>
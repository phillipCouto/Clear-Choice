<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard BeginTime="0" x:Key="ExtraFormShrink">
        <DoubleAnimation Storyboard.TargetName="grpExtraInfo" Storyboard.TargetProperty="Height"  From="300.0" To="0.0" Duration="0:0:0.1"/>
    </Storyboard>
    <Storyboard BeginTime="0" x:Key="ExtraFormExpand">
        <DoubleAnimation Storyboard.TargetName="grpExtraInfo" Storyboard.TargetProperty="Height"  From="0.0" To="300.0" Duration="0:0:0.1"/>
    </Storyboard>
</ResourceDictionary>
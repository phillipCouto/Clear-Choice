<UserControl x:Class="Clear_Choice.Views.LotLabourCostReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:UIControls="clr-namespace:Stemstudios.UIControls;assembly=UIControls"
             mc:Ignorable="d" 
             xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
             d:DesignHeight="300" d:DesignWidth="300"
             IsVisibleChanged="UserControl_IsVisibleChanged">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border CornerRadius="5,5,5,5" BorderThickness="1" Background="#15FFFFFF">
        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                <GradientStop Color="#55FFFFFF" Offset="0.5"/>
                <GradientStop Color="#FFFFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="20,5,5,5" VerticalAlignment="Top" Text="Total Labour Report" FontSize="20" FontStretch="Normal" Foreground="White"/>
            <DataGrid Name="dgLabourHours" Grid.Row="1" Grid.ColumnSpan="3"
                              Margin="5,16,5,5" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False" 
                              IsReadOnly="True"
                              ColumnWidth=".5*"
                              RowHeaderWidth="17" RowHeight="20" 
                              SelectionMode="Single" HorizontalScrollBarVisibility="Hidden"
                              FontSize="12"
                      AutoGeneratedColumns="dgLots_AutoGeneratedColumns" MouseDoubleClick="dgLabourHours_MouseDoubleClick">
                
            </DataGrid>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                <TextBlock Text="Average Hours" Margin="5" FontSize="14" Foreground="#FFFFFFFF" />
                <TextBox Name="txtAvgHours" Margin="5" Background="#00FFFFFF" Foreground="#FFFFFFFF" IsReadOnly="True" Text="0"/>
                <TextBlock Text="Average Cost" Margin="5" FontSize="14" Foreground="#FFFFFFFF"/>
                <UIControls:SNumberBox Name="amtAvgCost" Margin="5" IsCurrency="True" IsReadOnly="True" Amount="0"/>
                <TextBlock Text="Total Hours" Margin="5" FontSize="14" Foreground="#FFFFFFFF" />
                <TextBox Name="txtTotalHours" Margin="5" Background="#00FFFFFF" Foreground="#FFFFFFFF" IsReadOnly="True" Text="0"/>
                <TextBlock Text="Total Cost" Margin="5" FontSize="14" Foreground="#FFFFFFFF"/>
                <UIControls:SNumberBox Name="amtTotalCost" Margin="5" IsCurrency="True" IsReadOnly="True" Amount="0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>